/* pages/home/home.wxss */
@import "/pages/common/template/commonpicker/commonpicker.wxss";

textarea {
  width: 675rpx;
  height: 4em;
}

#default-btn {
  margin-left: 0rpx;
}

#primary-btn {
  margin-right: 0rpx;
}

.form-textarea {
  border: 1px #B2B2B2 solid;
  margin: 10px 0;
}

.health-picker {
  font-family: 'Open Sans';
  color: #333333;
  font-size: 11pt;
  font-weight: normal;
}

.survey-checkbox {
  display: flex;
  flex-direction: row;
  margin: 15px 0;
}

.survey-checkbox checkbox {
  flex: 30px auto;
}

.survey-checkbox text {
  flex: 1 auto;
  color: #666;
  font-size: 11pt;
}