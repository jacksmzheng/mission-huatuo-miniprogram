@import "/pages/common/template/commonpicker/commonpicker.wxss";

textarea {
  width: 675rpx;
  height: 4em;
}

#default-btn {
  margin-left: 0rpx;
}

#primary-btn {
  margin-right: 0rpx;
}

.form-textarea {
  border: 1px #B2B2B2 solid;
  margin: 10px 0;
}

.health-picker {
  font-family: 'Open Sans';
  color: #333333;
  font-size: 11pt;
  font-weight: normal;
}

.code-view {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}

.code-input {
  flex: 80%;
  border-bottom: 1px #ccc solid;
  height: 36px;
}
.code-button {
  font-size: 11pt;
}