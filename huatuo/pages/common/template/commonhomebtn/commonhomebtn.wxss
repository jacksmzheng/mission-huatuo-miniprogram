.common-home-btn-container-view{
  position: relative;
  display: inline-block;
  width: calc((100%-64)/5);

}

.message-count{
  position: absolute;
  top: -20rpx;
  left: calc(100% - 50rpx);
}

.weui-badge {
  display: inline-block;
  padding: .15em .4em;
  min-width: 10rpx;
  border-radius: 30rpx;
  background-color: #DB0011;
  color: #FFFFFF;
  line-height: 1.2;
  text-align: center;
  font-size: 6pt;
  vertical-align: middle;
}

.icon-view{
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.icon-text{
  margin-top: 16rpx;
  font-size: 10pt;
  font-family: 'Open Sans';
  color: #666666;
}
