/**app.wxss**/
.top-separate-line{
  position: fixed;
  top: 0;
  width: 100%;
  height: 2rpx;
  background-color: #EDEDED;
}

.page-section{
  padding: 32rpx;
  background-color: white;
}
.form-input-label {
  margin: 10rpx 0;
  font-family: 'Open Sans';
  font-size: 10.5pt;
  color: #666666;
  font-weight: bold;
}

.form-input-desc {
  font-family: 'Open Sans';
  font-weight: normal;
  font-size: 9pt;
  color: #666666;
  margin-bottom: 16rpx;
}

.form-input-content {
  border-bottom: 1rpx solid #B2B2B2;
  padding: 5rpx 0;
  font-family: 'Open Sans';
  color: #333333;
  font-size: 11pt;
  font-weight: normal;
}

.common-address-input .form-input-content {
  width: 100%;
}

input {
  caret-color: #34A344;
}

.form-input-view{
  margin-bottom: 48rpx;
}

.form-input-disabled {
  border-bottom: none!important;
}