.common-status-container-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin: 32rpx 0;
}

.common-status-label-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.common-status-tag{
  width: 32rpx;
  height: 32rpx;
}

.common-status-content{
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
}

.common-status-tab-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  width: 33%;
}

.common-status-tab{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.common-status-text-view{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.common-status-label{
  font-family: Helvetica;
  font-size: 10pt;
  color: #333333;
}

.common-status-text-view .common-status-label{
  font-family: 'Open Sans';
  font-size: 13pt;
  color: #333333;
}

.common-status-desc{
  text-align: center;
  font-family: Helvetica;
  font-weight: normal;
  font-size: 8pt;
  color: #AFAFAF;
}

.common-status-num{
  text-align: center;
  font-weight: bold;
  font-size: 24pt;
  margin-left: 32rpx;
}